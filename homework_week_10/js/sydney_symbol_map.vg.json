{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 450,
    "height": 450,
    "title": "Primary School Rank in New South Wales",
    "projection": {"type": "equirectangular"},
    "data": {
      "url": "https://raw.githubusercontent.com/mlay0009/fit3179/main/homework_week_10/data/sydney.csv"
    },
    "params": [
    {
      "name": "no_enrolments",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 2000,
        "step": 1,
        "name": "Minimum Enrolments: "
      }
    },
    {
      "name": "school_sector",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Catholic",
          "Government",
          "Independent"
        ],
        "labels": [
          "Show All",
          "Catholic",
          "Government",
          "Independent"
        ],
        "name": "School Sector Type: "
      }
    }
  ],
    "transform": [
      {"filter": "datum.Total_Enrolments > no_enrolments"},
    {
      "filter": "school_sector == null || datum.School_Sector == school_sector"
    }
    ],
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/mlay0009/fit3179/main/homework_week_10/js/syd_localities.json",
          "format": {"type": "topojson", "feature": "nsw_localities"}
        },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/mlay0009/fit3179/main/homework_week_10/data/sydney_symbol.csv"
        },
        "mark": {"type": "circle"},
        "encoding": {
          "longitude": {"field": "Longitude", "type": "quantitative"},
          "latitude": {"field": "Latitude", "type": "quantitative"},
          "size": {
            "field": "Total_Enrolments",
            "type": "quantitative",
            "title": "Total Students (Richter scale)",
            "scale": {
              "type": "threshold",
              "domain": [50, 100, 500, 1000, 4000],
              "range": [10, 25, 50, 100, 200]
            }
          },
          "tooltip": [
            {"field": "School_Name", "type": "nominal", "title": "School Name"},
            {"field": "Suburb", "type": "nominal", "title": "Suburb"},
            {"field": "Type", "type": "nominal", "title": "School Type"},
            {"field": "School_Sector", "type": "nominal", "title": "School Sector"},
            {"field": "Total_Enrolments", "type": "nominal", "title": "Total Enrolments"}
          ]
        }
      }
    ]
  }