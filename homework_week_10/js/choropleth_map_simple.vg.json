{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Primary School Rank in New South Wales",
  "data": {
    "url": "https://raw.githubusercontent.com/mlay0009/fit3179/main/homework_week_9/data/nsw_pri_schools.csv"
  },
  "projection": {"type": "equirectangular"},
  "params":[
    {
      "name": "select_year",
      "value" : 2021,
      "bind": {"input":"range", "min":2011,"max":2022,"step":1,"name":"Year: "}
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/mlay0009/fit3179/main/homework_week_9/js/sydney_localities.json",
        "format": {"type": "topojson", "feature": "nsw_localities"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "black"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/mlay0009/fit3179/main/homework_week_9/data/nsw_pri_schools.csv"
      },
      "transform": [
        {
          "lookup": "Postcode",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/mlay0009/fit3179/main/homework_week_9/js/sydney_localities.json",
              "format": {"type": "topojson", "feature": "nsw_localities"}
            },
            "key": "nsw_localities"
          }
        },
        {
          "aggregate": [
            {"op": "mean", "field": "Value", "as": "MeanValue"} 
          ],
          "groupby": ["Postcode"]
        }
      ],
      "mark": {
        "type": "geoshape", "tooltip": {"content": "data"}
      },
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {"field": "Value", "type": "quantitative", "scale": {"scheme": "blues"}},
        "tooltip": [
          {"field": "Postcode", "title": "Postcode"},
          {"field": "MeanValue", "title": "MeanValue"}
        ]
      }
    }
  ]
}