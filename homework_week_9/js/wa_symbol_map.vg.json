{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "Primary School Rank in Western Australia",
    "projection": {"type": "equirectangular"},
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/mlay0009/fit3179/main/homework_week_9/js/wa_localities.json",
          "format": {"type": "topojson", "feature": "wa_localities"}
        },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/mlay0009/fit3179/main/homework_week_9/data/wa_primary_schools.csv"
        },
        "mark": {"type": "circle", "tooltip": {"content": "data"}},
        "encoding": {
          "longitude": {"field": "Longitude", "type": "quantitative"},
          "latitude": {"field": "Latitude", "type": "quantitative"},
          "size": {
            "field": "Total Students",
            "type": "quantitative",
            "title": "Total Students (Richter scale)",
            "scale": {"domain": [0,5000]}
          }
        }
      }
    ]
  }