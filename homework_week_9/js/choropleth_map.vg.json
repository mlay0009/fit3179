{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Global Energy Consumption",
    "width": 800,
    "height": 400,
    "data": {
      "url": "https://raw.githubusercontent.com/julietchow/3179/main/data/AQI.csv"
    },
    "projection": {"type": "equalEarth"},
    "params":[
      {
        "name": "select_year",
        "value" : 2021,
        "bind": {"input":"range", "min":2000,"max":2021,"step":1,"name":"Year: "}
      }
    ],
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/mlay0009/fit3179/main/homework_week_9/js/ne_110m_admin_0_countries.json",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "transform": [
          {
            "calculate": "'Data is not available in ' + datum.properties.NAME",
            "as": "note"
          }
        ],
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
        "encoding": {"tooltip": {"field": "note"}}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/mlay0009/fit3179/main/homework_week_9/js/oceans.topojson",
          "format": {"type": "topojson", "feature": "oceans"}
        },
        "mark": {"type": "geoshape", "fill": "skyblue"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/mlay0009/fit3179/main/homework_week_9/js/WorldMapWithGraticules.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
        },
        "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/mlay0009/fit3179/main/homework_week_9/js/AQI.csv"
        },
        "transform": [
          {
            "lookup": "country",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/mlay0009/fit3179/main/homework_week_9/js/ne_110m_admin_0_countries.json",
                "format": {
                  "type": "topojson",
                  "feature": "ne_110m_admin_0_countries"
                }
              },
              "key": "properties.NAME"
            },
            "as": "geo"
          },
          {"filter": "datum.Year == select_year"}
        ],
        "mark": {"type": "geoshape", "stroke": "white"},
        "encoding": {
          "shape": {"field": "geo", "type": "geojson"},
          "color": {
            "field": "AQI Value",
            "type": "quantitative",
            "scale": {"type": "threshold", "domain":[0,20,40,60,80,100,120,140,160,180]},
            "legend": {
              "title": "Energy Consumption Per. Capita (Quadrillion British Thermal Unit)",
              "titleLimit": 320,
              "titleFontSize": 13,
              "direction": "horizontal",
              "orient": "bottom"
            }
          },
          "tooltip": [
            {"field": "Country", "type": "nominal", "title": "Country"},
            {"field": "total_consumption", "title": "Total", "type": "quantitative"},
            {"field": "coal_consumption", "title": "Coal", "type": "quantitative"},
            {"field": "ng_consumption", "title": "Natural Gas", "type": "quantitative"},
            {"field": "nr_consumption", "title": "Neuclear & Renewables", "type": "quantitative"},
            {"field": "p_consumption", "title": "Petroleum", "type": "quantitative"}
          ]
        }
      }
    ]
  }