{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": {
    "text": "New South Wales Primary School Gender Distribution",
    "subtitle": "Data Presented in Log-Log Scale",
    "fontSize": 16,
    "offset": 12
  },
  "data": {
    "url": "https://raw.githubusercontent.com/mlay0009/fit3179/main/assignment_2/data/nsw_bubble.csv"
  },
  "params": [
    {
      "name": "no_enrolments",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 3100,
        "step": 10,
        "name": "Minimum Enrolments: "
      }
    },
    {
      "name": "school_sector",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Catholic",
          "Government",
          "Independent"
        ],
        "labels": [
          "Show All",
          "Catholic",
          "Government",
          "Independent"
        ],
        "name": "School Sector Type: "
      }
    }],
  "transform": [
    {"filter": "datum.Total_Enrolments > no_enrolments"},
    {
      "filter": "school_sector == null || datum.School_Sector == school_sector"
    }
  ],
  "encoding": {
    "x": {
      "field": "Girls_Enrolments",
      "type": "quantitative",
      "title": "Count of Girl Enrolments",
      "scale": {
        "type": "log", 
        "domain": [1, 4000],
        "nice": true
      }
    },
    "y": {
      "field": "Boys_Enrolments",
      "type": "quantitative",
      "title" : "Count of Boys Enrolments",
      "scale": {
        "type": "log", 
        "domain": [1, 4000],
        "nice": true
      }
    }
  },
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Diversity",
          "title" : "Diversity",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [10, 100, 500, 1000, 4000],
            "range": [10, 25, 50, 75, 100]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "School_Sector",
          "title" : "School Sector",
          "type": "nominal",
          "scale": {
            "domain": [
                "Catholic",
                "Government",
                "Independent"
            ],
            "range": [
              "#e41a1c",
              "#984ea3",
              "#ff7f00"
            ]
          }
        },
        "opacity": {"value": 0.6},
        "tooltip": [
          {"field": "School_Name", "type": "nominal", "title" : "School Name"},
          {"field": "School_Sector", "type": "nominal", "title" : "School Sector"},
          {"field": "Girls_Enrolments", "type": "quantitative", "format": ",", "title" : "Count of Girls"},
          {"field": "Boys_Enrolments", "type": "quantitative", "format": ",", "title" : "Count of Boys"},
          {"field": "Total_Enrolments", "type": "quantitative", "format": ",", "title" : "Total Enrolments"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "School_Name", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['School_Name'] == 'The Illawarra Grammar School'",
            "value": 0
          },
          "value": 0
        },
        "tooltip": [
            {"field": "School_Name", "type": "nominal", "title" : "School Name"},
            {"field": "School_Sector", "type": "nominal", "title" : "School Sector"},
            {"field": "Girls_Enrolments", "type": "quantitative", "format": ",", "title" : "Count of Females"},
            {"field": "Boys_Enrolments", "type": "quantitative", "format": ",", "title" : "Count of Males"},
            {"field": "Total_Enrolments", "type": "quantitative", "format": ",", "title" : "Total Students"}
        ]
      }
    },
    {
      "data" : {"values" : [{"x_annotation": 10, "y_annotation": 750}]},
      "mark": {
      "type" : "text",
      "align" : "left",
      "baseline": "middle",
      "fontSize": 11, 
      "dx": 5
      },
      "encoding": {
        "text": {"value": "Independent schools often have a single-gender focus"}, 
        "x": {"field" : "x_annotation"},
        "y": {"field" : "y_annotation"},
        "opacity" : {"value" : 1}
      }
    }
  ]
}